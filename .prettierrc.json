{
	"printWidth": 120,
	"singleQuote": false,
	"jsxSingleQuote": false,
	"trailingComma": "all",
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"overrides": [
		{
			"files": "*.md",
			"options": {
				"useTabs": false,
				"proseWrap": "always"
			}
		}
	]
}
